<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cyrus.final_job.dao.QuitJobDao">

    <resultMap type="com.cyrus.final_job.entity.QuitJob" id="QuitJobMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="reason" column="reason" jdbcType="VARCHAR"/>
        <result property="enabled" column="enabled" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="QuitJobMap">
        select
          id, user_id, reason, enabled, create_time
        from final_job.quit_job
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="QuitJobMap">
        select
          id, user_id, reason, enabled, create_time
        from final_job.quit_job
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="QuitJobMap">
        select
          id, user_id, reason, enabled, create_time
        from final_job.quit_job
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="reason != null and reason != ''">
                and reason = #{reason}
            </if>
            <if test="enabled != null">
                and enabled = #{enabled}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into final_job.quit_job(user_id, reason, enabled, create_time)
        values (#{userId}, #{reason}, #{enabled}, #{createTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update final_job.quit_job
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="reason != null and reason != ''">
                reason = #{reason},
            </if>
            <if test="enabled != null">
                enabled = #{enabled},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from final_job.quit_job where id = #{id}
    </delete>

</mapper>